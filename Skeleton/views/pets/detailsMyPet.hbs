<section class="detailsMyPet">
    <h3 name="name">{{pet.name}}</h3>
    <p name="likes">Pet counter: <i class="fas fa-heart"></i> {{pet.likes}}</p>
    <p class="img" name="imageURL"><img src="{{pet.imageURL}}"></p>
    <form action="#/pet/edit/{{pet._id}}" method="POST">
        <textarea type="text" name="description">{{pet.description}}</textarea>
        <button class="button"> Save</button>
    </form>
</section>